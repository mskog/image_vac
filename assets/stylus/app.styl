@import "../node_modules/spinkit/css/spinners/7-three-bounce.css"

#masonry {
  display: flex;
  flex-wrap: wrap;
  div {
    margin: 2px;
    background-color: hsl(0, 0%, 96%);
    position: relative;
  }
  i{
    display: block;
  }
  img {
    position: absolute;
    top: 0;
    width: 100%;
    vertical-align: bottom;
    background: red;
  }

  img:not([src]) {
      visibility: hidden;
  }
}
#masonry::after {
  content: '';
  flex-grow: 999999999;
}
